{
    "compilerOptions": {
        "target": "ES2021",
        "strict": true,
        "baseUrl": "src",
        "outDir": "./target",
        "lib": ["ES2021", "dom"],
        "paths": {
            "@imports/*": ["../@types/Gjs/*"],
            "types": ["types/generated/types.d"],
            "imports/*": ["types/generated/imports/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/types/dummy/*"]
}
